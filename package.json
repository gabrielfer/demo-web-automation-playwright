{
  "name": "demo-ui-automation-playwright",
  "version": "1.0.0",
  "description": "Demo UI automation tests with Playwright and Typescript",
  "main": "index.js",
  "scripts": {
    "tests:chrome": "playwright test --config=playwright.config.ts --project=Chromium",
    "tests:firefox": "playwright test --config=playwright.config.ts --project=Firefox",
    "tests:webkit": "playwright test --config=playwright.config.ts --project=Webkit",
    "tests:e2e": "playwright test --config=e2e.config.ts --project=Firefox"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gabrielfer/demo-ui-automation-playwright.git"
  },
